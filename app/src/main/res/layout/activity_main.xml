<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.theapache64.places.features.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:context=".features.main.MainActivity">

        <!--Names-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_names"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/b_add_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Add name button-->
        <Button
            android:id="@+id/b_add_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/action_add_name"
            android:onClick="@{()->viewModel.onAddNameClicked()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_names" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/g_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="rv_names,rv_names" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>